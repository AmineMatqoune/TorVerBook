<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="logic.GUI.LoginController">
   <children>
      <Label layoutX="603.0" layoutY="38.0" text="TorVerBook">
         <font>
            <Font name="Comic Sans MS Bold" size="70.0" />
         </font>
      </Label>
      <Button fx:id="btnLanguage" layoutX="1467.0" layoutY="75.0" mnemonicParsing="false" onAction="#changeLanguage" prefHeight="30.0" prefWidth="80.0" text="ENG">
         <font>
            <Font name="Arial" size="19.0" />
         </font>
      </Button>
      <Label layoutX="1159.0" layoutY="261.0" text="E-mail/Username">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Label>
      <Label layoutX="1159.0" layoutY="351.0" text="Password">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <PasswordField fx:id="password" layoutX="1159.0" layoutY="399.0" prefHeight="25.0" prefWidth="275.0" />
      <TextField fx:id="username" layoutX="1159.0" layoutY="305.0" prefHeight="25.0" prefWidth="275.0" />
      <Button fx:id="login" layoutX="1242.0" layoutY="450.0" mnemonicParsing="false" onAction="#checkLogin" text="Log-In">

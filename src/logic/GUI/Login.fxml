            <Font name="Arial Bold" size="24.0" />
         </font>
      </Button>
      <Label layoutX="1208.0" layoutY="513.0" text="Haven't you already any account?" />
      <Button layoutX="1238.0" layoutY="549.0" mnemonicParsing="false" onAction="#signIn" text="Sign-In">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Button>
      <Label fx:id="errorUsername" layoutX="1159.0" layoutY="330.0" prefHeight="17.0" prefWidth="275.0" textFill="#f22424" />
      <Label fx:id="errorPwd" layoutX="1160.0" layoutY="426.0" prefHeight="17.0" prefWidth="275.0" textFill="#f22424" />
   </children>
</AnchorPane>

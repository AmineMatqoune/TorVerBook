<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>TorVerBook-Web</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>loginController</servlet-name>
		<servlet-class>torverbook.web.controllers.LoginController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logoutController</servlet-name>
		<servlet-class>torverbook.web.controllers.LogoutController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logoutController</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>signUpController</servlet-name>
		<servlet-class>torverbook.web.controllers.SignUpController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>signUpController</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dashboardController</servlet-name>
		<servlet-class>torverbook.web.controllers.DashboardController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dashboardController</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>settingsController</servlet-name>
		<servlet-class>torverbook.web.controllers.SettingsController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>settingsController</servlet-name>
		<url-pattern>/settings</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addAdController</servlet-name>
		<servlet-class>torverbook.web.controllers.AddAdController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>addAdController</servlet-name>
		<url-pattern>/add-ad</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>personalAdsController</servlet-name>
		<servlet-class>torverbook.web.controllers.PersonalAdsController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>personalAdsController</servlet-name>
		<url-pattern>/personal-ads</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>personalReviewsController</servlet-name>
		<servlet-class>torverbook.web.controllers.PersonalReviewsController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>personalReviewsController</servlet-name>
		<url-pattern>/personal-reviews</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>favouriteListController</servlet-name>
		<servlet-class>torverbook.web.controllers.FavouriteListController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>favouriteListController</servlet-name>
		<url-pattern>/favourite</url-pattern>
	</servlet-mapping>
</web-app>